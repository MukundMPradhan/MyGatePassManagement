<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FragmentSearchHeaderFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@android:style/TextAppearance.Large"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:background="@android:color/holo_red_dark"
            android:fontFamily="monospace"
            android:text="Search Gate Pass"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textStyle="normal|bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/serchHeaders"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bodyshape"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvSHRefNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="2"
                    android:text="Reference No."
                    android:textColor="@android:color/white"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/tvSHFastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="2"
                    android:text="First Name"
                    android:textColor="@android:color/white"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/tvSHLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="2"
                    android:text="Last name"
                    android:textColor="@android:color/white"
                    android:textStyle="normal|bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bodyshape"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etSHRefNo"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/shape_textbox"
                    android:hint="Ref. No."
                    android:selectAllOnFocus="false"
                    android:singleLine="true"
                    android:textColor="@android:color/white" />


                <EditText
                    android:id="@+id/etSHFastName"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/shape_textbox"
                    android:hint="F. Name" />


                <EditText
                    android:id="@+id/etSHLastName"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/shape_textbox"
                    android:hint="L. Name" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bodyshape"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvSHPassType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:text="Pass Type"
                    android:textColor="@android:color/white"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/tvSHStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:text="Status"
                    android:textColor="@android:color/white"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/tvSHSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:text="Search"
                    android:textColor="@android:color/white"
                    android:textStyle="normal|bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bodyshape"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/spinnerSHPassType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1" />


                <Spinner
                    android:id="@+id/spinnerSHStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/buttonSHSearch"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/headershape"
                    android:text="Search"
                    android:textAllCaps="false" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</FrameLayout>
